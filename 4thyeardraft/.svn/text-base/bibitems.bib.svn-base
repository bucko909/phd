@article{Z.Sela02232009,
	author = {Sela, Z.},
	title = {{Diophantine geometry over groups VII: the elementary theory of a hyperbolic group}},
	journal = {Proc. London Math. Soc.},
	volume = {},
	number = {},
	pages = {pdn052},
	doi = {10.1112/plms/pdn052},
	year = {2009},
	abstract = {This paper generalizes our work on the structure of sets of solutions to systems of equations in a free group, projections of such sets, and the structure of elementary sets defined over a free group, to a general torsion-free (Gromov) hyperbolic group. In particular, we show that every definable set over such a group is in the Boolean algebra generated by AE sets, prove that hyperbolicity is a first-order invariant of a finitely generated group, and obtain a classification of the elementary equivalence classes of torsion-free hyperbolic groups. Finally, we present an effective procedure to decide if two given torsion-free hyperbolic groups are elementarily equivalent.
	},
	URL = {http://plms.oxfordjournals.org/cgi/content/abstract/pdn052v1},
	eprint = {http://plms.oxfordjournals.org/cgi/reprint/pdn052v1.pdf}
}

